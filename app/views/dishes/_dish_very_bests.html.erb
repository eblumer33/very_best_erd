<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Very Bests

    <a data-toggle="collapse" href="#dish_very_bests_new_form">
      Add very best
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @dish.very_bests.each do |very_best| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to very_best, very_best %>

        <% if current_user == very_best.user %>
          <%= link_to very_best, method: :delete do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="dish_very_bests_new_form">
        <%= render partial: "dishes/dish_very_bests_new_form" %>
      </div>
    </div>

  </ul>
</div>
