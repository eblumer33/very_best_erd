<% was_validated = dish.errors.any? %>

<%= form_with(model: dish, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% dish_name_class = "form-control" %>
    <% dish_name_was_invalid = dish.errors.include?(:dish_name) %>

    <% if was_validated %>
      <% if dish_name_was_invalid %>
        <% dish_name_class << " is-invalid" %>
      <% else %>
        <% dish_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :dish_name %>
    <%= f.text_field :dish_name, class: dish_name_class, placeholder: "Enter dish name" %>
    <% if dish_name_was_invalid %>
      <% dish.errors.full_messages_for(:dish_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% cuisine_type_class = "form-control" %>
    <% cuisine_type_was_invalid = dish.errors.include?(:cuisine_type) %>

    <% if was_validated %>
      <% if cuisine_type_was_invalid %>
        <% cuisine_type_class << " is-invalid" %>
      <% else %>
        <% cuisine_type_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :cuisine_type %>
    <%= f.text_field :cuisine_type, class: cuisine_type_class, placeholder: "Enter cuisine type" %>
    <% if cuisine_type_was_invalid %>
      <% dish.errors.full_messages_for(:cuisine_type).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
